{

  "manifest_version": 2,
  "name": "Claim Gatherer",
  "description": "Automatically gather your claim info",
  "version": "1.0",
  "homepage_url": "https://github.com/binartist/claim-gatherer-webextension",
  "icons": {
    "96": "icons/cg-96.png"
  },

  "applications": {
    "gecko": {
      "id": "claim-gatherer@cybergear.io",
      "strict_min_version": "45.0"
    }
  },

  "permissions": [
    "tabs",
    "storage",
    "<all_urls>",
    "notifications"
  ],

  "browser_action": {
    "default_icon": "icons/cg-96.png",
    "default_title": "Claim Gatherer",
    "default_popup": "popup/index.html"
  },

  "background": {
    "scripts": ["background.js"]
  }
}
